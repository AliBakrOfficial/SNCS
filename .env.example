# ══════════════════════════════════════════
# SNCS — Smart Nurse Calling System
# Environment Configuration
# ══════════════════════════════════════════

# ── Database ─────────────────────────────
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=sncs_db
DB_USER=sncs_user
DB_PASS=

# ── Application ──────────────────────────
APP_ENV=development
APP_SECRET=
APP_URL=http://localhost:8000
APP_DEBUG=true

# ── WebSocket Server ─────────────────────
WS_HOST=0.0.0.0
WS_PORT=8080

# ── VAPID Keys (Web Push) ────────────────
# Generate with: ./vendor/bin/minishlink-web-push generate-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@sncs.io

# ── QR Code Security ────────────────────
QR_HMAC_SECRET=

# ── CORS ─────────────────────────────────
CORS_ALLOWED_ORIGINS=http://localhost:9000

# ── Session ──────────────────────────────
SESSION_LIFETIME=3600
SESSION_SECURE=false
